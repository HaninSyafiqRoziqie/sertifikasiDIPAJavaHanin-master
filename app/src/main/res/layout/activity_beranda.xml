<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BerandaActivity">

    <ImageView
        android:id="@+id/tambahpemasukan2"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="170dp"
        android:contentDescription="TODO"
        android:src="@drawable/grafik" />

    <TextView
        android:id="@+id/rangkuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Rangkuman Buku ini"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangkuman"
        android:id="@+id/line1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/pengeluaran"
            android:text="pengeluaran :"
            android:textColor="@color/teal_700"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/pengeluaranid"
            android:text="angka"
            android:textColor="@color/teal_700"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:id="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/pemasukan"
            android:text="pemasukan :"
            android:textColor="@color/teal_200"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/pemasukanid"
            android:text="angka"
            android:textColor="@color/teal_200"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="371dp"
        android:layout_height="125dp"
        android:layout_below="@+id/line2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tambahpemasukan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:contentDescription="TODO"
            android:src="@drawable/coin" />


        <ImageView
            android:id="@+id/tambahpengeluaran"
            android:layout_width="77dp"
            android:layout_height="88dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:contentDescription="TODO"
            android:src="@drawable/income" />
    </LinearLayout>

    <TextView
        android:id="@+id/halaman_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="casual"
        android:text="Tambah pemasukan"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/halaman_bayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="0dp"
        android:fontFamily="casual"
        android:text="tambahkan pengeluaran"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/detailcash"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:contentDescription="TODO"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/pengaturan"
            android:layout_width="84dp"
            android:layout_height="92dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="1dp"
            android:contentDescription="TODO"
            android:src="@drawable/gear" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail CashFlow"
        android:id="@+id/cashflow"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="casual"
        android:textStyle="bold"/>

    <TextView

        android:id="@+id/pengaturan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="1dp"
        android:fontFamily="casual"
        android:text="Pengaturan"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>